<h2><%= "My list" %></h2>
<h4><%= @list.name.capitalize %></h4>
<% @list.movies.each do |movie| %>
<%= movie.title %>
<% bookmark = movie.bookmarks.find_by(list: @list) %>
<%= link_to "Delete from list", bookmark_path(bookmark), data: {turbo_method: :delete} %>
<% end %>

<%= link_to "Add a new movie", new_list_bookmark_path(@list) %>
